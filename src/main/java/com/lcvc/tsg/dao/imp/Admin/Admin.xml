<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 指明这个映射文件adminMapper.xml的逻辑路径-->
<mapper namespace="com.lcvc.tsg.dao.AdminDao.AdminDao">
    <!--=============================== 查看管理员详情==================================-->
    <select id="getAdmin" resultType="Admin" parameterType="int">

        SELECT * FROM admin WHERE id=#{id}

    </select>
    <!--=============================== 修改管理员密码==================================-->
    <update id="updatePassword" parameterType="Admin">
    update
    admin
    set
    admin_password=#{admin_password}
    where id=#{id}
    </update>

    <!--=============================== 修改基本信息==================================-->
    <update id="updateubase" parameterType="Admin">
        update
        admin
        <set>
            <if test="admin_nickname!=null">admin_nickname=#{admin_nickname},</if>
            <if test="admin_phone!=null">admin_phone=#{admin_phone},</if>
            <if test="admin_head!=null">admin_head=#{admin_head},</if>
            <if test="admin_Email!=null ">admin_Email=#{admin_Email}</if>
        </set> where id=#{id}
    </update>

    <!--=============================== 查看管理员昵称有没有重名 ==================================-->
    <select id="AdminRename" parameterType="String" resultType="int">
        SELECT COUNT(id) FROM admin WHERE  admin_nickname=#{AdminNickName}

    </select>

    <!--=============================== 查看管理员有没有重名 ==================================-->
    <select id="Rename" parameterType="String" resultType="int">
        SELECT COUNT(id) FROM admin WHERE  admin_name=#{AdminName}

    </select>

    <!--=============================== 查看管理员==================================-->
    <select id="AdminShow" resultType="Admin" parameterType="int">
        SELECT * FROM  admin  order by id asc limit #{index},10
    </select>

    <!--========================== 查管理员总数用于分页==============================-->
    <select id="AdminCount" resultType="int">

        SELECT COUNT(id) FROM admin
    </select>

    <!--=============================== 添加管理员 ==================================-->
    <insert id="AddAdmin" parameterType="Admin">
        INSERT  INTO  admin(id,admin_name,admin_password,admin_head,admin_phone,admin_Email,admin_sex,admin_nickname)
        VALUE (#{id},#{admin_name},#{admin_password},#{admin_head},#{admin_phone},#{admin_Email},#{admin_sex},#{admin_nickname})
    </insert>
    <!--=============================== 删除管理员 ==================================-->
    <update id="deleteAdmin" parameterType="Admin">
        delete from admin where id=#{id}
    </update>
</mapper>