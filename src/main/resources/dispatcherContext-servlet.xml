<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	   xmlns:mvc="http://www.springframework.org/schema/mvc"	   xmlns:context="http://www.springframework.org/schema/context"	   xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">	<mvc:annotation-driven/>	<!-- 自动扫描且仅扫描@Controller，不要扫描其他注解，以免和spring基本配置的其他扫描冲突 -->	<context:component-scan base-package="com.lcvc.tsg.web"							use-default-filters="false">		<!-- use-default-filters="false"表示不适用默认的过滤器，而是自己的过滤器 -->		<!-- 表示只扫描@Controller的注解-->		<context:include-filter type="annotation"								expression="org.springframework.stereotype.Controller"/>		<context:include-filter type="annotation"								expression="org.springframework.web.bind.annotation.ControllerAdvice"/>	</context:component-scan>	<!-- 视图解析器 -->	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">		<property name="prefix" value="/jsp/"/>		<!--  <property name="suffix" value=".jsp"></property> -->	</bean>	<!-- 加入该注释就可以访问静态文件 -->	<mvc:default-servlet-handler/>	 <mvc:interceptors>		<!-- 单个拦截    ： 当前为管理员拦截 -->		<mvc:interceptor>			<!-- 拦截的资源 -->			<mvc:mapping path="/admin/**"/>			<!-- 不拦截的目录 -->			<mvc:exclude-mapping path="/admin/login"/>			<mvc:exclude-mapping path="/admin/logout"/>			<!-- 拦截器的路径 -->		 <bean class="com.lcvc.tsg.web.Login.filter.LoginForAdminInterceptor"></bean>	 </mvc:interceptor>	</mvc:interceptors>	<mvc:default-servlet-handler/>	<mvc:interceptors>		<!-- 单个拦截    ： 当前为用户拦截 -->		<mvc:interceptor>			<!-- 拦截的资源 -->			<mvc:mapping path="/user/**"/>			<!-- 不拦截的目录 -->			<mvc:exclude-mapping path="/user/login"/>			<mvc:exclude-mapping path="/user/logout"/>			<!-- 拦截器的路径 -->			<bean class="com.lcvc.tsg.web.Login.filter.LoginForCustomerInterceptor"></bean>		</mvc:interceptor>	</mvc:interceptors></beans>